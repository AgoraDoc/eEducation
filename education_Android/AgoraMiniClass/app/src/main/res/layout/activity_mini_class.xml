<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.activity.MiniClassActivity">

    <FrameLayout
        android:id="@+id/fl_white_board_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_99"
        android:layout_marginBottom="@dimen/dp_9"
        android:background="@drawable/bg_im_subclass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cl_im_layout"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="140"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_im_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginEnd="@dimen/dp_9"
        android:layout_marginBottom="@dimen/dp_9"
        android:background="@drawable/bg_im_subclass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="73"
        app:layout_constraintStart_toEndOf="@id/fl_white_board_layout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_tab_chatroom"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/slt_bg_im_tab"
            android:gravity="center"
            android:onClick="onClickTabChatRoom"
            android:text="@string/Chatroom"
            android:textColor="@drawable/slt_im_tab_tv_color"
            android:textSize="@dimen/dp_15"
            app:layout_constraintEnd_toStartOf="@id/line_tab_vertical"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line_tab_vertical"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="@dimen/dp_32"
            android:background="@color/grey_E8E8E8"
            app:layout_constraintEnd_toStartOf="@id/tv_tab_student_list"
            app:layout_constraintStart_toEndOf="@id/tv_tab_chatroom"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tab_student_list"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/slt_bg_im_tab"
            android:gravity="center"
            android:onClick="onClickTabStudentList"
            android:text="@string/Student_List"
            android:textColor="@drawable/slt_im_tab_tv_color"
            android:textSize="@dimen/dp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/line_tab_vertical"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line_tab_chat_room_bottom"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/grey_E8E8E8"
            app:layout_constraintEnd_toStartOf="@id/line_tab_student_list_bottom"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tab_chatroom" />

        <View
            android:id="@+id/line_tab_student_list_bottom"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/grey_E8E8E8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/line_tab_chat_room_bottom"
            app:layout_constraintTop_toBottomOf="@id/tv_tab_chatroom" />

        <FrameLayout
            android:id="@+id/fl_im"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_tab_chat_room_bottom">

        </FrameLayout>
    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_video_call_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_82"
        android:layout_marginTop="@dimen/dp_9"
        app:layout_constraintEnd_toEndOf="@id/fl_white_board_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>


</android.support.constraint.ConstraintLayout>